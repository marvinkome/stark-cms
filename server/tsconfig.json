{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "strict": true,
        "outDir": "./dist",
        "baseUrl": "./lib",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "typeRoots": ["./typings"],
        "lib": ["esnext.asynciterable", "es5", "es2015"]
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules"]
}
